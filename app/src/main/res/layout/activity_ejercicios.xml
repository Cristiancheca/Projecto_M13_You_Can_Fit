<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ejercicios">

    <TextView
        android:id="@+id/semana"
        android:layout_width="294dp"
        android:layout_height="48dp"
        android:text="REPTE SETMANAL"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="405dp"
        android:layout_height="644dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/dilluns"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DILLUNS" />

            <Button
                android:id="@+id/dimarts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DIMARTS" />

            <Button
                android:id="@+id/dimecres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DIMECRES" />

            <Button
                android:id="@+id/dijous"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DIJOUS" />

            <Button
                android:id="@+id/divendres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DIVENDRES" />

            <Button
                android:id="@+id/dissabte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DISSBTE" />

            <Button
                android:id="@+id/diumenge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DIUMENGE" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>